{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "no-console": ["error", { "allow": ["log"] }]
    },
    "overrides": [
      {
        "files": ["test/*.js"],
        "rules": {
          "no-undef": "off",
          "no-unused-vars": "off",
          "func-names": "off"
        }
      }
    ]
}
